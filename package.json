{
  "name": "micro-up",
  "version": "1.0.0",
  "description": "A microservice that checks whether a website is up.",
  "author": {
    "name": "Hugo Muller-Downing",
    "email": "npmjs@hugo.sx",
    "url": "hu.md"
  },
  "scripts": {
    "start": "micro index.js",
    "predev": "xo",
    "dev": "nodemon --exec 'micro index.js'",
    "test": "ava",
    "posttest": "xo"
  },
  "dependencies": {
    "micro": "^9.3.4",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "ava": "^1.4.1",
    "nock": "^9.0.9",
    "nodemon": "^1.19.1",
    "test-listen": "^1.0.1",
    "xo": "^0.23.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hugomd/micro-up.git"
  },
  "keywords": [
    "microservice",
    "micro",
    "ping",
    "up"
  ],
  "ava": {
    "verbose": true
  },
  "xo": {
    "space": true,
    "rules": {
      "curly": 0,
      "no-negated-condition": 0
    }
  },
  "bugs": {
    "url": "https://github.com/hugomd/micro-up/issues"
  },
  "homepage": "https://github.com/hugomd/micro-up#readme",
  "license": "MIT"
}
